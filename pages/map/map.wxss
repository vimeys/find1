}
.cover{
    width: 100%;
    height: 390px;
    background: #fff;
    opacity: .1;
}
.dialog{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .3;
    position: fixed;
    top:0;
    left: 0;
    display: flex;
    z-index: 100;
}
.dialog-module{
    width: 600rpx;
    height: 300rpx;
    margin: auto;
    background: #fff;
    border-radius: 10rpx;
    position: fixed;
    top:50%;
    left: 50%;
    display: flex;
    flex-direction: row;
    z-index: 101;
}

